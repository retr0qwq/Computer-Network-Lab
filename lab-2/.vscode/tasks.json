{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and cleanup",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
               "cl.exe /std:c++17 /utf-8 /EHsc /nologo /Fd${fileDirname}\\output\\ /Fe${fileDirname}\\output\\${fileBasenameNoExtension}.exe ${fileDirname}\\*.cpp ws2_32.lib && del ${fileDirname}\\*.obj"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build sender",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/std:c++17",
                "/utf-8",
                "/EHsc",
                "/nologo",
                "${fileDirname}\\sender.cpp",
                "${fileDirname}\\Datapacket.cpp",
                "/Fe:${fileDirname}\\output\\sender.exe",
                "ws2_32.lib"
            ],
            "group": "build"
        },
        {
            "label": "build receiver",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/std:c++17",
                "/utf-8",
                "/EHsc",
                "/nologo",
                "${fileDirname}\\receiver.cpp",
                "${fileDirname}\\Datapacket.cpp",
                "/Fe:${fileDirname}\\output\\receiver.exe",
                "ws2_32.lib"
            ],
            "group": "build"
        }
    ]
}
