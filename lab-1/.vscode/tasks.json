{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and cleanup",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "cl.exe /std:c++17 /utf-8 /EHsc /nologo /Fe${fileDirname}\\output\\${fileBasenameNoExtension}.exe ${file} && del ${fileDirname}\\${fileBasenameNoExtension}.obj"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
